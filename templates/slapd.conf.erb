# Server Configuration
pidfile  /var/run/slapd/slapd.pid
argsfile /var/run/slapd/slapd.args
loglevel <%= @log_level %>

<% if @bind_anon == true -%>
# Allow anonymous bind
allow bind_anon_dn
<% end -%>
<% if @bind_v2 == true -%>
# Allow LDAPv2
allow bind_v2
<% end -%>

# Schemas
<% @schemas.each do |s| -%>
include /etc/ldap/schema/<%= s %>.schema
<% end -%>

# Modules
moduleload back_bdb
<% @modules.each do |m| -%>
moduleload <%= m %>
<% end -%>

<% if @ssl == true -%>
# SSL
TLSCACertificateFile   <%= @ssl_ca %>
TLSCertificateFile     <%= @ssl_cert %>
TLSCertificateKeyFile  <%= @ssl_key %>
<% end -%>

<% if @monitor == true -%>
# Define a monitoring database (http://www.openldap.org/doc/admin24/backends.html#Monitor)
# - suffix cn=Monitor is implied and cannot be changed.
# - database is unwriteable.

database monitor
# suffix "cn=Monitor"
rootdn    "<%= @monitordn %>"
rootpw    "<%= @monitorpw %>"
access to *
  by dn.exact=gidNumber=0+uidNumber=0,cn=peercred,cn=external,cn=auth" read
  by dn.exact="<%= @monitordn %>" read
  by * none
<% end -%>

# Database definition
database  bdb
directory <%= @directory %>
suffix    "<%= @suffix %>"
rootdn    "<%= @rootdn %>"
rootpw    "<%= @rootpw %>"

# Overlays
<% @overlays.each do |o| -%>
overlay <%= o %>
<% end -%>

# Indexes
<% @indexes.each do |i| -%>
index <%= i %>
<% end -%>

# Database parameters
cachesize 10000
checkpoint 128 15
